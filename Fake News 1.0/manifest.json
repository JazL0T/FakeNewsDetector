{
  "manifest_version": 3,
  "name": "Fake News Detector 101",
  "version": "2.0.5",
  "description": "Scan any webpage to detect fake or real news using AI-powered analysis and heuristics.",

  "icons": {
    "16": "fakenewslogo.png",
    "48": "fakenewslogo.png",
    "128": "fakenewslogo.png"
  },

  "action": {
    "default_icon": {
      "16": "fakenewslogo.png",
      "48": "fakenewslogo.png",
      "128": "fakenewslogo.png"
    },
    "default_popup": "popup.html",
    "default_title": "Fake News Detector 101"
  },

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>",
    "https://fakenewsdetector-zjzs.onrender.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "popup.js",
        "popup.css",
        "login.html",
        "login.js",
        "login_hint.js",
        "success.html",
        "success.js",
        "welcome.html",
        "welcome.js",
        "privacy_policy.html",
        "privacy_policy.js",
        "fakenewslogo.png",
        "content.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "author": {
    "name": "Fake News Detector 101 Team",
    "email": "support@fakenewsdetector101.com"
  }
}
